<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">My Mission Table</h4>
                    <p class="card-description">

                    </p>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th colspan="2">Description</th>
                                    <th>Status</th>
                                    <th colspan="3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td id="itemId">102</td>
                                    <td>Task Title</td>
                                    <td colspan="2">Description</td>
                                    <td><label class="badge badge-danger">Pending</label></td>
                                    <td colspan="3">
                                        <a class="btn btn-sm btn-outline-secondary" asp-action=""> Edit </a>

                                        <a type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#exampleModalCenter"
                                           onclick="handleButtonClick(this)"> Delete </a>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                            Launch demo modal
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td id="itemId">1</td>
                                    <td>Task Title</td>
                                    <td colspan="2">Description</td>
                                    <td><label class="badge badge-danger">Pending</label></td>
                                    <td colspan="3">
                                        <a class="btn btn-sm btn-outline-secondary" asp-action=""> Edit </a>

                                        <a type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#exampleModalCenter"
                                           onclick="handleButtonClick(this)"> Delete </a>

                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                            Launch demo modal
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*Model Part*@

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form asp-action="Delete" method="post">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Are You Sure ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input name="id" id="selectedItemId" />
                <hr />
                Are You Want To Remove This Mission From List ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>

        </div>
        </form>
    </div>
</div>

@*
    Scripts
*@
<script>
    function handleButtonClick(button) {
        // Get the parent row of the clicked button
        const row = button.closest('tr');
        const itemIdCell = row.querySelector('#itemId');
        // Read the innerHTML of the <td> element
        const itemId = itemIdCell.innerHTML;
        // Log the itemId to the console
        const inp = document.getElementById("#selectedItemId")
        console.log('input:', inp);
        inp.Value = itemId;
        console.log('ItemId:', itemId);
    }
</script>